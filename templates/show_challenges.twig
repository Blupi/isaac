<h2 id="Challenges">Challenges</h2>

<table class="table table-hover table-condensed">
    <col width="10%" />
    <col width="70%" />
    <col width="20%" />
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th class="text-center">Defeated</th>
    </tr>
    {% for challengeID, bool in save.challenges %}
        <tr>
            <td>{{ challengeID }}</td>
            <td>{{ catalogue.challenges[challengeID] }}</td>
            <td class="text-center">
                {% if save.challenges[challengeID] %}
                    <span class="glyphicon glyphicon-ok text-success"></span>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
</table>
