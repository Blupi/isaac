{% extends "base.twig" %}

{% block content %}

    <h2>Savegame info</h2>

    <p>Hash: <em>{{ hash }}</em></p>

    <p>Uploaded: <em>{{ uploaded }}</em></p>

    <p><a href="{{ path('download', { hash: hash }) }}">Download savegame</a></p>

    <hr />

    <p>
        <strong>Jump to:</strong><br />
        <a class="btn btn-primary btn-xs" href="#Progress">Progress</a>
        <a class="btn btn-primary btn-xs" href="#Stats">Stats</a>
        <a class="btn btn-primary btn-xs" href="#Challenges">Challenges</a>
        <a class="btn btn-primary btn-xs" href="#Bosses">Bosses</a>
        <a class="btn btn-primary btn-xs" href="#Items">Items</a>
        <a class="btn btn-primary btn-xs" href="#Achievements">Achievements</a>
    </p>

    <hr />

    {% include 'show_progress.twig' %}
    {% include 'show_stats.twig' %}
    {% include 'show_challenges.twig' %}
    {% include 'show_bosses.twig' %}
    {% include 'show_items.twig' %}
    {% include 'show_achievements.twig' %}

{% endblock %}
